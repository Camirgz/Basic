opt=int(input("Enter 1 to convert from celcious to farenheit\nEnter 2 to convert from farenhait to celcious: "))
if opt == 1:
    tc=0
    tc=input("Enter the temperature in celcious: ")
    temperature=0
    temperature=int(tc)*32.5
    y=round(temperature)
    print(" " + str(tc) + "째 celcious are " + str(y) + "째 fahrenheit")
elif opt == 2:
    tf=0
    tf=input("Enter the temperature in fahrenheit: ")
    temperature=0
    temperature=int(tf)/32.5
    x=round(temperature)
    print(" " + str(tf) + "째 fahrenheit are " + str(x) + "째 celcious")
else:
    print("Invalid option")
    
